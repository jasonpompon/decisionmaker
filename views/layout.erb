<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DecisionMaker</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>
  <h1>DecisionMaker</h1>


  <% if logged_in? %>
    logged in as <%= current_user.username %> <a href="/users/<%= current_user.id %>">Show me all my questions!</a>
  <form action="/session" method="post">
    <input type="hidden" name="_method" value="delete">
    <button>logout</button>
  </form>
  <% end %>

  <div class="">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/questions/new">New Question</a></li>
      <% if !logged_in? %>
      <li><a href="/users/new">New User</a></li>
      <% end %>
    </ul>
  </div>


  <%= yield %>

</body>
